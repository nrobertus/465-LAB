; Include derivative-specific definitions
            INCLUDE 'derivative.inc'


; export symbols
            XDEF mode_0, mode_1, mode_2
            ; we export both '_Startup' and 'main' as symbols. Either can
            ; be referenced in the linker .prm file or from C/C++ later on



            XREF __SEG_END_SSTACK, PTBDD_Upper_output, PTBDD_Upper_input, toggle_clock, delay, BF_check,  n, t, m, b, lcd_clear_display, lcd_print_char, lcd_new_line  ; symbol defined by the linker for the end of the stack


; variable/data section
MY_ZEROPAGE: SECTION  SHORT         ; Insert here your data definition

; code section
MyCode:     SECTION
main:
_Startup:
            LDHX   #__SEG_END_SSTACK ; initialize the stack pointer
            TXS
			CLI			; enable interrupts

mode_0:

		JSR print_TEC_tag
		
		JSR lcd_new_line
		
    	RTS

mode_1:

    		JSR print_TEC_tag
    		
    		MOV #$43, $83				; 'C'
			JSR lcd_print_char
			
			MOV #$6F, $83				; 'o'
			JSR lcd_print_char
			
			MOV #$6F, $83				; 'o'
			JSR lcd_print_char
			
			MOV #$6C, $83				; 'l'
			JSR lcd_print_char
			
			JSR lcd_new_line
			
			RTS

mode_2:

      		JSR print_TEC_tag
      
      		MOV #$48, $83				; 'H'
	  		JSR lcd_print_char
		
			MOV #$65, $83				; 'e'
			JSR lcd_print_char
			
			MOV #$61, $83				; 'a'
			JSR lcd_print_char
			
			MOV #$74, $83				; 't'
			JSR lcd_print_char
			
			JSR lcd_new_line
	  		RTS

print_TEC_tag:
		MOV #$20, $83				; ' '
		JSR lcd_print_char
		
		MOV #$54, $83				; 'T'
		JSR lcd_print_char

		MOV #$45, $83				; 'E'
		JSR lcd_print_char

		MOV #$43, $83				; 'C'
		JSR lcd_print_char

		MOV #$20, $83				; ' '
		JSR lcd_print_char

		MOV #$73, $83				; 's'
		JSR lcd_print_char

		MOV #$74, $83				; 't'
		JSR lcd_print_char

		MOV #$61, $83				; 'a'
		JSR lcd_print_char

		MOV #$74, $83				; 't'
		JSR lcd_print_char

		MOV #$65, $83				; 'e'
		JSR lcd_print_char

		MOV #$3A, $83				; ':'
		JSR lcd_print_char

		MOV #$20, $83				; ' '
		JSR lcd_print_char

		RTS
